<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_12"
        android:layout_toEndOf="@id/ivBack"
        android:layout_toRightOf="@id/ivBack"
        android:background="@drawable/search_border_normal"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/search"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="请输入商品名称、型号或编码"
        android:maxLines="1"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/space_12"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/space_12"
        android:textColorHint="@color/text_color_dark"
        android:textSize="@dimen/text_size_12" />


</RelativeLayout>