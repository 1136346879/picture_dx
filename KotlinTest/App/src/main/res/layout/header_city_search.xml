<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_city_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_search_history"
        android:textSize="@dimen/space_12"
        android:paddingLeft="@dimen/space_20"
        android:paddingTop="@dimen/space_2"
        android:paddingBottom="@dimen/space_2"
        android:textColor="@color/text_color_dark"
        android:background="@color/common_background"
        android:layout_below="@+id/ll_city_location"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_city_history"
        android:layout_margin="@dimen/space_14"
        android:visibility="gone">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>