<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/location_black"
        android:drawableRight="@drawable/more_in_bottom_black"
        android:drawablePadding="@dimen/space_4"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_10"
        android:text="定位中..."
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_12" />


    <com.example.administrator.kotlintest.widget.XEditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_6"
        android:layout_marginBottom="@dimen/space_6"
        android:layout_weight="1"
        android:background="@drawable/shape_radius_white_100_linewhite"
        android:clickable="true"
        android:drawableStart="@drawable/search"
        android:drawableLeft="@drawable/search"
        android:drawableEnd="@drawable/camera"
        android:drawableRight="@drawable/camera"
        android:drawablePadding="4dp"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:hint="请输入商品名称、型号或编码"
        android:maxLines="1"
        android:paddingStart="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:paddingEnd="@dimen/space_12"
        android:paddingRight="@dimen/space_12"
        android:singleLine="true"
        android:textColorHint="@color/text_color_dark"
        android:textSize="@dimen/text_size_12" />


    <ImageView
        android:id="@+id/mIvScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_6"
        android:src="@drawable/ic_sao"
        />

    <ImageView
        android:id="@+id/mIvRepository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/space_10"
        android:src="@drawable/cang"
        android:visibility="visible" />
</LinearLayout>