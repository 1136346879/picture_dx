<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivNoNetWork"
        android:layout_width="@dimen/space_110"
        android:layout_height="@dimen/space_110"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_100"
        android:src="@drawable/error_no_network" />

    <TextView
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivNoNetWork"
        android:layout_centerHorizontal="true"
        android:text="没有网络"
        android:layout_marginTop="@dimen/space_14"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_14" />


    <TextView
        android:id="@+id/tvReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/shape_radius_white_2_linegray"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="@dimen/space_10"
        android:paddingLeft="@dimen/space_60"
        android:paddingRight="@dimen/space_60"
        android:paddingTop="@dimen/space_10"
        android:text="重新加载"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_16" />


</RelativeLayout>