<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/grantHeadContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/color_ffffff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/readNowText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_head_button"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="立即阅读"
        android:textColor="@color/color_ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/grandComputerText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_head_button"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="授权电脑阅读"
        android:textColor="@color/color_ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/reScanText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_head_button"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="重新扫码"
        android:textColor="@color/color_ffffff"
        android:textSize="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/headPointLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="14dp"
            android:background="@drawable/shape_head_point" />

        <TextView
            android:id="@+id/headPointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_ffffff"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>